@model IEnumerable<DogWalkSprint.Models.ViewModels.NeighborhoodViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Neighborhoods</h1>

<p>
    <a asp-action="Create">Add</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Walkers)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Walkers)
                </td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@item.Id">

                        <input type="submit" value="Edit" class="btn btn-primary" />
                    </a>
                    <a asp-action="Delete"
                       asp-route-id="@item.Id">

                        <input type="submit" value="Delete" class="btn btn-primary" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>